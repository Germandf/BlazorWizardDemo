@page "/"

<PageTitle>Home</PageTitle>

<div style="margin: 10px auto; width: fit-content;">
    <div style="margin-bottom: 10px;">
        <label for="title" style="cursor: pointer; display: block;">Title</label>
        <input id="title" @bind-value="@_title" @bind-value:event="oninput" />
    </div>

    <div style="margin-bottom: 10px;">
        <label for="sub-title" style="cursor: pointer; display: block;">SubTitle</label>
        <input id="sub-title" @bind-value="@_subTitle" @bind-value:event="oninput" />
    </div>

    <div style="margin-bottom: 10px;">
        <InputCheckbox id="fixed-height" @bind-Value="_fixedHeight" />
        <label for="fixed-height" style="cursor: pointer;">Fixed height</label>
    </div>

    <div style="margin-bottom: 10px;">
        <InputCheckbox id="fixed-max-width" @bind-Value="_fixedMaxWidth" />
        <label for="fixed-max-width" style="cursor: pointer;">Fixed max width</label>
    </div>
</div>

